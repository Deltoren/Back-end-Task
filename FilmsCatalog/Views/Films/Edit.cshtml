@model FilmsCatalog.Models.ViewModels.FilmEditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактирование фильма</h1>

<hr />
<div class="row">
    <div class="col-md-8">
		<form asp-action="Edit" asp-route-id="@ViewBag.id" asp-route-pageId="@ViewBag.pageId" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-row">
				<div class="form-group col-sm-6">
					<label asp-for="Name" class="control-label">Имя</label>
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="form-group col-sm-6">
					<label asp-for="ReleaseDate" class="control-label">Год выхода</label>
					<input asp-for="ReleaseDate" class="form-control" />
					<span asp-validation-for="ReleaseDate" class="text-danger"></span>
				</div>
			</div>
			<div class="form-row">
				<div class="form-group col-sm-6">
					<label asp-for="Producer" class="control-label">Режиссёр</label>
					<input asp-for="Producer" class="form-control" />
					<span asp-validation-for="Producer" class="text-danger"></span>
				</div>
				<div class="form-group col-sm-6">
					<label asp-for="Description" class="control-label">Описание</label>
					<textarea asp-for="Description" class="form-control"></textarea>
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group">
				<label asp-for="File" class="control-label">Постер</label>
				<input asp-for="File" class="form-control-file" />
				<span asp-validation-for="File" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Сохранить изменения" class="btn btn-primary" />
			</div>
		</form>
    </div>
</div>

<div>
    <a asp-controller="Films" asp-action="Details" asp-route-id="@ViewBag.id" asp-route-pageId="@ViewBag.pageId" class="btn btn-secondary text-white">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
